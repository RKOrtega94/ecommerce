# =============================================================================
# INFRASTRUCTURE SERVICES
# =============================================================================

# Redis Configuration
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379

# Kafka Configuration
SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9094

# Vault Configuration
# Note: Change this token in production!
VAULT_DEV_ROOT_TOKEN_ID=your_vault_root_token_here
VAULT_DEV_LISTEN_ADDRESS=0.0.0.0:8200
VAULT_API_ADDR=http://0.0.0.0:8200

# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=postgres
PGDATA=/var/lib/postgresql/data/pgdata

# Database Connection (Common)
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_database_password

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password
PGADMIN_CONFIG_SERVER_MODE=False

# =============================================================================
# CORE SERVICES
# =============================================================================

# Config Server
CONFIG_SERVER_URL=http://config-server:8888
SPRING_PROFILES_ACTIVE=native
SPRING_CLOUD_CONFIG_SERVER_NATIVE_SEARCH_LOCATIONS=file:///app/properties/{application}

# Discovery Server (Eureka)
DISCOVERY_SERVER_URL=http://discovery-server:8761/eureka/
EUREKA_CLIENT_REGISTER_WITH_EUREKA=false
EUREKA_CLIENT_FETCH_REGISTRY=false

# =============================================================================
# SERVICE-SPECIFIC CONFIGURATION
# =============================================================================

# Gateway Service
GATEWAY_SERVER_PORT=8080
GATEWAY_DATABASE_NAME=gateway_db

# Global Service
GLOBAL_SERVER_PORT=8082
GLOBAL_GRPC_PORT=9082
GLOBAL_DATABASE_NAME=global_service_db

# Electronic Signature Service
ELECTRONIC_SIGNATURE_SERVER_PORT=8081
ELECTRONIC_SIGNATURE_GRPC_PORT=9081
ELECTRONIC_SIGNATURE_DATABASE_NAME=electronic_signature_service_db

# Global DB Connection (for Electronic Signature Service)
GLOBAL_DB_HOST=postgres
GLOBAL_DB_PORT=5432
GLOBAL_DB_NAME=global_service_db
GLOBAL_DB_USERNAME=postgres
GLOBAL_DB_PASSWORD=your_global_db_password

# =============================================================================
# SPRING BOOT CONFIGURATION
# =============================================================================

# Docker Compose
SPRING_DOCKER_COMPOSE_ENABLED=false

# DevTools Configuration
SPRING_DEVTOOLS_RESTART_ENABLED=true
SPRING_DEVTOOLS_LIVERELOAD_ENABLED=true
SPRING_DEVTOOLS_RESTART_POLL_INTERVAL=1000
SPRING_DEVTOOLS_RESTART_QUIET_PERIOD=500
SPRING_DEVTOOLS_RESTART_ADDITIONAL_PATHS=/app/core,/app/services,/app/properties

# Gradle Configuration
GRADLE_OPTS=-Dorg.gradle.daemon=false

# E-commerce Development Environment Configuration

# LocalStack Configuration
LOCALSTACK_ENDPOINT=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-east-1

# Mock Cognito Configuration
COGNITO_ENDPOINT=http://localhost:3001
COGNITO_USER_POOL_ID=us-east-1_MockPool
COGNITO_CLIENT_ID=mock-client-id
COGNITO_REGION=us-east-1

# Database Configuration (for when you add PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ecommerce
DB_USER=postgres
DB_PASSWORD=postgres

# Application Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# JWT Configuration (for your backend)
JWT_SECRET=your-jwt-secret-for-development
JWT_EXPIRES_IN=1h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:4200

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration (for development)
EMAIL_FROM=noreply@localhost
EMAIL_SMTP_HOST=localhost
EMAIL_SMTP_PORT=587

# Logging
LOG_LEVEL=debug

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MFA=false